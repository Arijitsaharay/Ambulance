<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <fragment
        android:id="@+id/google_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment" />


    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="30dp"
        android:text="whats's your destination"
        android:textSize="15dp"
        android:id="@+id/dest_btn"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:background="@drawable/button_location"
        android:alpha="0.70"
        >
    </Button>

    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:text="where to pick you up?"
        android:textSize="15dp"
        android:id="@+id/pickup_btn"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:background="@drawable/button_location"
        android:alpha="0.70">
    </Button>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="30dp"
        android:text="Book Ride"
        android:id="@+id/button_bookride"
        android:background="@drawable/button_bookride"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:alpha="0.70"
        android:onClick="goToPay">

    </Button>

    <Button
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="Sign Out"
        android:textSize="10dp"
        android:background="@drawable/button_bookride"
        android:textColor="#FFFFFF"
        android:layout_marginTop="552dp"
        android:layout_marginLeft="160dp"
        android:onClick="signOut">

    </Button>



</RelativeLayout>

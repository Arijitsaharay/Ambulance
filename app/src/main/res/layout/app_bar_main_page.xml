<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main_page" />
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/maps_icon"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="250dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/redcross"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="250dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Emergency"
        android:textSize="20dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="60dp"
        android:background="#FC0808"
        android:textColor="#FFFFFF"
        android:onClick="goTocheckout">

    </Button>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Non Emergency"
        android:textSize="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="60dp"
        android:background="#2D83C7"
        android:textColor="#FFFFFF"
        android:onClick="goToMap">

    </Button>


</androidx.coordinatorlayout.widget.CoordinatorLayout>